{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/vendors/bootstrap-daterangepicker/daterangepicker.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/vendors/fullcalendar/dist/fullcalendar.min.css')}}" rel="stylesheet">
    <link href="{{ asset('assets/vendors/fullcalendar/dist/fullcalendar.print.css')}}"  rel="stylesheet">


{% endblock %}

{% block body %}


    <section class="nav-md">
        <div class="container body">
            <div class="main_container">
                <div class="col-md-3 left_col">
                    <div class="left_col scroll-view">
                        <div class="clearfix"></div>
                        <br />

                        <!-- sidebar menu -->
                        <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                            <div class="menu_section">
                                <br />
                                <!-- sidebar menu -->
                                <ul id="Submenu"><h6>Bonjour</h6><h2>{{ app.user.email }}</h2>
                                    <HR>
                                    <li><a href="{{ path('user_dashboard') }}" class="menu">Dashboard</a></li>
                                    <li><a href="{{ path('user_calendar') }}"  class="menu">Calendrier</a></li>
                                    <li><a href="{{ path('contact_index') }}"  class="menu">Liste de contacts</a></li>
                                    <HR>
                                    <li><a href="{{ path('user_profile') }}"  class="menu">Profile</a></li>
                                    <li><a href="{{ path('app_login') }}"  class="menu">Login</a></li>
                                    <li><a href="{{ path('app_login') }}"  class="menu">S'inscrire</a></li>
                                    <li><a href="{{ path('app_logout') }}"  class="menu">Déconnexion</a></li>
                                </ul>
                                <!-- /sidebar menu -->
                            </div>
                        </div>

                    </div>
                </div>

                <!-- page content -->
                <div class="right_col" role="main">
                    <div class="">
                        <div class="page-title">
                            <div class="title_left">
                                <h3>Profile</h3>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-md-12 col-sm-12  ">
                            <div class="clearfix"></div>
                            <div class="x_panel">
                                <div class="x_content">
                                    <div class="col-md-8">
                                        <div class="card mb-3">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <h6 class="mb-0">Nom</h6>
                                                    </div>
                                                    <div class="col-sm-9 text-secondary">
                                                        {{ app.user.name??'Inconnu' }}
                                                    </div>
                                                </div>
                                                <hr>
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <h6 class="mb-0">Prénom</h6>
                                                    </div>
                                                    <div class="col-sm-9 text-secondary">
                                                        {{ app.user.lastname??'Inconnu' }}
                                                    </div>
                                                </div>
                                                <hr>
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <h6 class="mb-0">Email</h6>
                                                    </div>
                                                    <div class="col-sm-9 text-secondary">
                                                        {{ app.user.email??'Inconnu' }}
                                                    </div>
                                                </div>
                                                <hr>
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <h6 class="mb-0">Date de naissance</h6>
                                                    </div>
                                                    <div class="col-sm-9 text-secondary">
{#                                                        {{ app.user.birthday| date('d/m/Y') }}#}
                                                    </div>
                                                </div>
                                                <hr>
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <h6 class="mb-0">Télephone</h6>
                                                    </div>
                                                    <div class="col-sm-9 text-secondary">
                                                        {{ app.user.phone??'Inconnu' }}

                                                    </div>
                                                </div>
                                                <hr>
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <h6 class="mb-0">Adresse</h6>
                                                    </div>
                                                    <div class="col-sm-9 text-secondary">
                                                        {{ app.user.address??'Inconnu' }}

                                                    </div>
                                                </div>
                                                <hr>
                                            </div>
                                        </div>
                                        <div><a href="{{ path('user_edit',{id:app.user.id}) }}" class="btn btn-info"></i>Editer</a></div>
                                        <form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                            <button class="btn btn-danger" >Supprimer</button>
                                        </form>

                                        <p>Attention une fois le compte supprimé vous aurez plus accés au site !</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /page content -->
            </div>


        </div>

    </section>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- jQuery -->
    <script src="{{ asset('assets/vendors/jquery/dist/jquery.min.js') }}"></script>
    <!-- Bootstrap -->
    <script src="{{ asset('assets/vendors/bootstrap/dist/js/bootstrap.bundle.min.js') }}"></script>

    <script src="{{ asset('assets/build/js/custom.js') }}">  </script>

{% endblock %}

