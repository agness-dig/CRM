                                <div class="x_panel">
                                    <div class="x_title">
                                    </div>
                                    <div class="x_content">
                                        {{ form_start(form) }}
                                            {{ form_row(form.name) }}
                                            {{ form_row(form.lastname) }}
                                            {{ form_row(form.email) }}
                                            {{ form_row(form.phone) }}
                                            {{ form_row(form.address) }}
