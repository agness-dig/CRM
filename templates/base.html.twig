<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <!-- Meta, title, CSS, favicons, etc. -->
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <!-- Bootstrap -->
        <link href="{{ asset('assets/vendors/bootstrap/dist/css/bootstrap.min.css') }}" rel="stylesheet"/>
        <!-- Font Awesome -->
        <link href="{{ asset('assets/vendors/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet"/>
        <!-- NProgress -->
        <link href="{{ asset('assets/vendors/nprogress/nprogress.css') }}" rel="stylesheet" />
        <!-- Animate.css -->
        <link href="{{ asset('assets/vendors/animate.css/animate.min.css') }}" rel="stylesheet" />
        <!-- Custom Theme Style -->
        <link href="{{ asset('assets/build/css/custom.min.css')}}" rel="stylesheet" />

        <title>{% block title %}Page d'accueil{% endblock %}</title>



        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}

            <style>
                .logo {
                    width: 50px;
                    height: 50px;
                    z-index: 3;
                    margin: 0 auto;
                }
                .logo img {
                    width: 100%;
                    display: block;
                }
            </style>
        {% endblock %}


    </head>

    <body>

        <section class="nav-md">
            <div class="container body">
                <div class="main_container">
                    <div class="col-md-3 left_col">
                        <div class="left_col scroll-view">
                            <div class="clearfix"></div>
                            <br />
                            {%  if app.user %}

                                <!-- sidebar menu -->
                                <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                                    <div class="menu_section">
                                        <br />
                                        <div class="logo">
                                            <img src="{{ asset('assets/build/images/logo.jpg') }}" alt="">
                                        </div>
                                        <!-- sidebar menu -->
                                            <ul id="Submenu"><h6>Bonjour</h6><h2>{{ app.user.email }}</h2>
                                                <HR>
                                                <li><a href="{{ path('user_dashboard') }}" class="menu">Dashboard</a></li>
                                                <li><a href="{{ path('user_calendar') }}"  class="menu">Calendrier</a></li>
                                                <li><a href="{{ path('contact_index') }}"  class="menu">Liste de contacts</a></li>
                                                <HR>
                                                <li><a href="{{ path('user_profile') }}"  class="menu">Profile</a></li>

                                                <li><a href="{{ path('app_logout') }}"  class="menu">Déconnexion</a></li>
                                            </ul>
                                    </div>
                                </div>
                                <!-- /sidebar menu -->
                            {% endif %}
                        </div>
                    </div>


                    {% block body %}{% endblock %}

                </div>
            </div>
        </section>

        {% block footer %}<!-- footer content -->
        <footer>
            <div class="pull-right">
                <!-- footer content -->
                <p>Copyright © TimeGain 2021 | <a href="{{  path("confidentialite") }}">Politiques de confidentialités</a>  | <a href="{{ path("mention")}}">Mentions légales</a> </p>
                <!-- /footer content -->
            </div>
            <div class="clearfix"></div>
        </footer>
            <!-- /footer content -->
        {% endblock %}
        <!-- /calendar modal -->
        <script src="{{ asset('assets/vendors/jquery/dist/jquery.min.js') }}"></script>
        <script src="{{ asset('assets/build/js/custom.js') }}">  </script>
        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}

    </body>

</html>
