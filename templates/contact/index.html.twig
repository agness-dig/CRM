{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}

    <!-- page content -->
    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3><small></small>Gestion des</small> Contacts</h3>
                </div>
                <div class="title_right">
                    <div class="col-md-5 col-sm-5   form-group pull-right top_search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Rechercher un contact...">
                            <span class="input-group-btn">
              <button class="btn btn-default" type="button">Recherche</button>
            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12 col-sm-12  ">
                <a href="{{ path('contact_new') }}" class=" add_list btn btn-info"></i>Ajouter un contact</a>
                <div class="clearfix"></div>
                <div class="x_panel">
                    <div class="x_content">
                        <div class="table-responsive">
                            <table class="table table-striped jambo_table bulk_action">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Nom</th>
                                        <th>Prénom</th>
                                        <th>Téléphone</th>
                                        <th>Email</th>
                                        <th>Catégorie</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>

                                <tbody>

                                {% for contact in contacts %}
                                    <tr>
                                        <td>{{ contact.id }}</td>
                                        <td>{{ contact.name }}</td>
                                        <td>{{ contact.firstName }}</td>
                                        <td>{{ contact.phoneNbr }}</td>
                                        <td>{{ contact.email }}</td>
                                        <td>{{ contact.category.category }}</td>
                                        <td>
                                            <a href="{{ path('contact_edit', {'id': contact.id}) }}" class="btn btn-info">editer</a>
                                            <a href="{{ path('contact_show', {'id': contact.id}) }}" class="btn btn-danger">supprimer</a>
                                        </td>

                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7">Aucun enregistrement trouvé</td>
                                    </tr>
                                {% endfor %}

                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}

    <!-- jQuery -->
    <script src="{{asset('assets/vendors/jquery/dist/jquery.min.js')}}"></script>
    <!-- Bootstrap -->
    <script src="{{ asset('assets/vendors/bootstrap/dist/js/bootstrap.bundle.min.js') }}"></script>
    <!-- FastClick -->
    <script src="{{ asset('assets/vendors/fastclick/lib/fastclick.js') }}"></script>
    <!-- NProgress -->
    <script src="{{ asset('assets/vendors/nprogress/nprogress.js') }}"></script>

    <!-- Custom Theme Scripts -->
    <script src="{{ asset('assets/build/js/custom.min.js') }}"></script>

    <a href="{{ path('contact_new') }}">créer un nouveau contact</a>
{% endblock %}
